<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<!-- 
		/properties/export/export.xml
		The configuration file for remote (web) services.
		This file is referenced by /properties/applicationContext.xml.
	-->

	<import resource="classpath:org/codehaus/xfire/spring/xfire.xml" /> 

	<bean id="abstractXFire"
		class="org.codehaus.xfire.spring.remoting.XFireExporter"
		abstract="true" >
		<property name="serviceFactory" ref="xfire.serviceFactory" />
		<property name="xfire" ref="xfire" />
	</bean> 

	<bean id="sendtrackXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="sendtrack" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.SendTrack" />
	</bean>
	
	<bean 
		id="sendtrack" 
		class="org.esupportail.smsuapi.services.remote.SendTrackImpl"
		>
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>

	<bean id="sendsmsXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="sendsms" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.SendSms" />
	</bean>

	<bean 
		id="sendsms" 
		class="org.esupportail.smsuapi.services.remote.SendSmsImpl">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean id="sendsmsthirdXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="sendsmsthird" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.SendSmsThird" />
	</bean>

	<bean 
		id="sendsmsthird" 
		class="org.esupportail.smsuapi.services.remote.SendSmsThirdImpl">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean id="smsuapiStatusXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="smsuapiStatus" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.SmsuapiStatus" />
	</bean>

	<bean 
		id="smsuapiStatus" 
		class="org.esupportail.smsuapi.services.remote.SmsuapiStatusImpl">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean id="notificationPhoneNumberInBlackListXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="notificationPhoneNumberInBlackList" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.NotificationPhoneNumberInBlackList" />
	</bean>

	<bean 
		id="notificationPhoneNumberInBlackList" 
		class="org.esupportail.smsuapi.services.remote.NotificationPhoneNumberInBlackListImpl">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean id="listPhoneNumbersInBlackListXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="listPhoneNumbersInBlackList" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.ListPhoneNumbersInBlackList" />
	</bean>

	<bean 
		id="listPhoneNumbersInBlackList" 
		class="org.esupportail.smsuapi.services.remote.ListPhoneNumbersInBlackListImpl">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>

	<bean id="reportingXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="reporting" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.Reporting" />
	</bean>
	
	<bean 
		id="reporting" 
		class="org.esupportail.smsuapi.services.remote.ReportingImpl">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean id="testConnexionXFire"
		parent="abstractXFire" >
		<property name="serviceBean" ref="testConnexion" />
		<property name="serviceClass" value="org.esupportail.smsuapi.services.remote.TestConnexion" />
	</bean>
	
	<bean 
		id="testConnexion" 
		class="org.esupportail.smsuapi.services.remote.TestConnexionImpl">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
</beans>