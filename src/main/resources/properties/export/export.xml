<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd "
	>

	<!-- 
		/properties/export/export.xml
		The configuration file for remote (web) services.
		This file is referenced by /properties/applicationContext.xml.
	-->
	
	<bean 
		id="sendtrack" 
		class="org.esupportail.smsuapi.services.remote.SendTrack"
		>
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>

	<bean 
		id="sendsms" 
		class="org.esupportail.smsuapi.services.remote.SendSms">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean 
		id="smsuapiStatus" 
		class="org.esupportail.smsuapi.services.remote.SmsuapiStatus">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean 
		id="notificationPhoneNumberInBlackList" 
		class="org.esupportail.smsuapi.services.remote.NotificationPhoneNumberInBlackList">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean 
		id="listPhoneNumbersInBlackList" 
		class="org.esupportail.smsuapi.services.remote.ListPhoneNumbersInBlackList">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean 
		id="reporting" 
		class="org.esupportail.smsuapi.services.remote.Reporting">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>
	
	<bean 
		id="testConnexion" 
		class="org.esupportail.smsuapi.services.remote.TestConnexion">
		<property name="applicationService" ref="applicationService" />
		<property name="domainService" ref="domainService" />
	</bean>


	<bean id="restServletActions"
	      class="org.esupportail.smsuapi.services.servlet.RestServletActions">
		<property name="clientManager" ref="clientManager"/>

		<property name="sendSms" ref="sendsms" />
		<property name="sendTrack" ref="sendtrack" />
		<property name="notificationPhoneNumberInBlackList" ref="notificationPhoneNumberInBlackList" />
	</bean>
	
</beans>